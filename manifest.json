{
  "manifest_version": 3,
  "name": "TabHero",
  "version": "1.0",
  "description": "Manage your tabs with a quick command palette",
  "permissions": [
    "tabs",
    "activeTab",
    "tabCapture",
    "storage",
    "history",
    "scripting"
  ],
  "commands": {
    "open-tab-manager": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open tab manager"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "popup.js",
        "popup.css",
        "icon16.png",
        "icon48.png",
        "icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
